// Supabase (PostgreSQL). Connection URLs are in prisma.config.ts (Prisma 7).
// DATABASE_URL = pooled (runtime). DIRECT_URL = direct (CLI: db push, migrate).

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  anonymous_id     String   @id
  reputation_score Float    @default(0.1)
  accuracy_metric  Float?   // Agreement with eventual consensus; used with reputation for vote weight (ยง4.1, ยง5.2)
  created_at      DateTime @default(now())
  rumors          Rumor[]  @relation("Creator")
  votes           Vote[]
}

model Rumor {
  id                String    @id @default(uuid()) @db.Uuid
  content           String
  creator_id        String
  created_at        DateTime  @default(now())
  deleted_at        DateTime?
  topic_cluster_id  String?   @db.Uuid  // For grouping related rumors; excludes deleted from cluster influence (ยง4.1)
  final_trust_score Float?
  finalized_at      DateTime?
  creator           User      @relation("Creator", fields: [creator_id], references: [anonymous_id])
  votes             Vote[]
}

model Vote {
  rumor_id  String   @db.Uuid
  voter_id  String
  vote      String   // 'true' | 'false' | 'neutral'
  created_at DateTime @default(now())
  rumor     Rumor    @relation(fields: [rumor_id], references: [id], onDelete: Cascade)
  voter     User     @relation(fields: [voter_id], references: [anonymous_id])
  @@id([rumor_id, voter_id])
}
